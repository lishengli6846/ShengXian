<form>
  <view class='con'>
    <view class='item'>
      <text>收货人：</text>
      <input value='{{name}}'></input>
    </view>
    <view class='item'>
      <text>手机号：</text>
      <input value='{{phone}}'></input>
    </view>
    <view class='item item-map'>
