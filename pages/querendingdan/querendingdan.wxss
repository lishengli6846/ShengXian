.goods{
  background-color: #fff;
}
.goods .item-goods{
  padding: 20rpx;
  overflow: hidden;
}
.item-goods .pic{
  float: left;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.item-goods .txt{
  padding-top: 10rpx;
  overflow: hidden;
}
.item-goods .txt .nums{
  display: block;
}
.item-goods .pic image{
  display: block;
  width: 100%;
  height: 100%;
}
.item-goods .h3{
  font-size: 24rpx;
  color: #353535;
}
.item-goods text{
  font-size: 24rpx;
  color: #888888;
}
.item-goods navigator{
  overflow: hidden;
}
.txt-info{
  padding: 15rpx 0 28rpx;
  margin-bottom: 20rpx;
}
.item-help{
  height: 101rpx;
  box-sizing: border-box;
  padding: 20rpx 20rpx 0;
}
.item-help .btn-1{
  width: 150rpx;
  height: 56rpx;
  color: #353535;
  font-size: 22rpx;
  background: #E5E5E5;
  float: left;
}
.item-help .btn-1::after{
  border: none;
}
.item-help navigator{
  float: right;
  text-decoration: underline;
  font-size: 24rpx;
  color: #3275fd;
  margin-top: 10rpx;
}
.plc-area{
  font-size: 24rpx;
  color: #353535;
}
textarea{
  padding: 20rpx;
  font-size: 24rpx;
}
.goods .item{
  border-bottom: 1rpx solid #E5E5E5;
}

.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 0 20rpx;
  background: #fff;
  height: 98rpx;
  line-height: 98rpx;
  box-sizing: border-box;
}
.bottom .left view{
  float: left;
}
.bottom .left{
  font-size: 24rpx;
  color: #888888;
}
.bottom .left text{
  color: #b61122;
}
.bottom .left .txt{
  overflow: hidden;
}
.bottom button{
  float: right;
  width: 350rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  font-size: 24rpx;
  margin-top: 5rpx;
  background-color: #11B624;
}
.bottom button::after{
  border:  none;
}
checkbox .wx-checkbox-input{
   border-radius: 50%;/* 圆角 */
   width: 32rpx; /* 背景的宽 */
   height: 32rpx; /* 背景的高 */
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border: none;
   background: #3275FD;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 30rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   height: 30rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 30rpx;
   text-align: center;
   font-size:20rpx; /* 对勾大小 30rpx */
   color:#fff; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}
.checks{
  width: 46rpx;
}
