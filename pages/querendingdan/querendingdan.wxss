}
.order{
  position: relative;
  padding: 0 20rpx;
  background-color: #fff;
}
.order .con{
  margin-top: 20rpx;
  padding: 10rpx 0 26rpx;
  border-bottom: 1rpx solid #E5E5E5;
}
.order .name{
  font-size: 24rpx;
}
.order .tel{
  font-size: 24rpx;
}
.order .address{
  font-size: 24rpx;
}
.order image{
  position: absolute;
  width: 19rpx;
  height: 33rpx;
  right: 20rpx;
  top: 30rpx;
}
.order .info text{
  font-size: 24rpx;
}
.order .info .left{
  margin-right: 30rpx;
